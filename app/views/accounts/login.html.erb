
<div class="container mt-5">
<h1>Login</h1>

<%= form_tag(login_path(), class: 'form-horizontal') do -%>
	<div class="form-group">
		<label class="control-label col-sm-2" for="email">Email:</label>
		<div class="col-sm-10">
		  	<%= email_field_tag "email]","", class: 'form-control', required: true %>
		</div>
	</div>

	<div class="form-group">
		<label class="control-label col-sm-2" for="email">Password:</label>
		<div class="col-sm-10">
		  	<%= password_field_tag "password","", class: 'form-control', required: true %>
		</div>
	</div>

	<div class="form-group"> 
		<div class="col-sm-offset-2 col-sm-10">
		  <%= submit_tag 'Login', class: 'btn btn-success', required: true %>
		</div>
	</div>
  
<% end -%>

<%= link_to "New User?", signup_path() %>

</div>
